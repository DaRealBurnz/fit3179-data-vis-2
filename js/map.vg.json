{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "data/Kyoto_Restaurant_Info.csv"
    },
    "transform": [
        {
            "filter": "datum.TotalRating > minRating"
        },
        {
            "filter": "datum.ReviewNum > minReviews"
        },
        {
            "filter": "datum.Lunch != 'NA'"
        },
        {
            "fold": [
                "Dinner",
                "Lunch"
            ]
        }
    ],
    "params": [
        {
            "name": "minRating",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 3,
                "max": 4.1,
                "step": 0.05,
                "name": "Minimum Rating: "
            }
        },
        {
            "name": "minReviews",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 300,
                "step": 5,
                "name": "Minimum No. of Reviews: "
            }
        }
    ],
    "hconcat": [
        {
            "width": 450,
            "height": 450,
            "title": "Restaurants in Kyoto",
            "projection": {
                "type": "azimuthalEqualArea",
                "rotate": [
                    -135.755611,
                    -35.021667,
                    0
                ]
            },
            "layer": [
                {
                    "data": {
                        "url": "data/KyotoMap.json",
                        "format": {
                            "type": "topojson",
                            "feature": "Kyoto"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "rosybrown",
                        "stroke": "white"
                    }
                },
                {
                    "data": {
                        "url": "data/KyotoMap.json",
                        "format": {
                            "type": "topojson",
                            "feature": "OtherPrefectures"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "lightgray",
                        "stroke": "white"
                    }
                },
                {
                    "data": {
                        "url": "data/KyotoMap.json",
                        "format": {
                            "type": "topojson",
                            "feature": "graticules"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "stroke": "gray"
                    }
                },
                {
                    "mark": {
                        "type": "circle",
                        "tooltip": {
                            "content": "data"
                        }
                    },
                    "encoding": {
                        "longitude": {
                            "field": "Long",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "Lat",
                            "type": "quantitative"
                        },
                        "color": {
                            "field": "TotalRating",
                            "title": "Restaurant Rating",
                            "scale": {
                                "type": "bin-ordinal",
                                "range": [
                                    "#f0f9e8",
                                    "#ccebc5",
                                    "#a8ddb5",
                                    "#7bccc4",
                                    "#43a2ca",
                                    "#0868ac"
                                ],
                                "domain": [
                                    3,
                                    3.2,
                                    3.4,
                                    3.6,
                                    3.8,
                                    4,
                                    4.2
                                ]
                            }
                        },
                        "size": {
                            "field": "ReviewNum",
                            "type": "quantitative",
                            "title": "No. of Reviews",
                            "scale": {
                                "domain": [
                                    1,
                                    200,
                                    400,
                                    600,
                                    800,
                                    1000,
                                    1200
                                ],
                                "range": [
                                    30,
                                    200
                                ]
                            }
                        },
                        "tooltip": [
                            {
                                "field": "Name",
                                "type": "nominal"
                            },
                            {
                                "field": "JapaneseName",
                                "type": "nominal",
                                "title": "Japanese Name"
                            },
                            {
                                "field": "FirstCategory",
                                "type": "nominal",
                                "title": "First Category"
                            },
                            {
                                "field": "SecondCategory",
                                "type": "nominal",
                                "title": "Second Category"
                            },
                            {
                                "field": "TotalRating",
                                "type": "quantitative",
                                "title": "Restaurant Rating"
                            },
                            {
                                "field": "ReviewNum",
                                "type": "quantitative",
                                "title": "No. of Reviews"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "width": 450,
            "height": 450,
            "title": "Restaurant price ranges",
            "encoding": {
                "x": {
                    "field": "value",
                    "type": "ordinal",
                    "title": "Price Range",
                    "scale": {
                        "domain": [
                            " ～￥999",
                            "￥1000～￥1999",
                            "￥2000～￥2999",
                            "￥3000～￥3999",
                            "￥4000～￥4999",
                            "￥5000～￥5999",
                            "￥6000～￥7999",
                            "￥8000～￥9999",
                            "￥10000～￥14999",
                            "￥15000～￥19999",
                            "￥20000～￥29999",
                            "￥30000～"
                        ]
                    }
                },
                "y": {
                    "aggregate": "count",
                    "type": "quantitative",
                    "title": "Number of Restaurants",
                    "axis": {
                        "tickCount": 10
                    }
                }
            },
            "layer": [
                {
                    "mark": "bar",
                    "encoding": {
                        "color": {
                            "field": "key",
                            "title": "Meal Types"
                        },
                        "xOffset": {
                            "field": "key"
                        },
                        "opacity": {
                            "condition": {
                                "param": "legendFilter",
                                "value": 1
                            },
                            "value": 0.2
                        },
                        "tooltip": [
                            {
                                "field": "key",
                                "type": "nominal",
                                "title": "Meal Type"
                            },
                            {
                                "field": "value",
                                "type": "ordinal",
                                "title": "Price Range"
                            },
                            {
                                "aggregate": "count",
                                "type": "quantitative",
                                "title": "No. of Restaurants"
                            }
                        ]
                    },
                    "params": [
                        {
                            "name": "legendFilter",
                            "select": {
                                "type": "point",
                                "fields": [
                                    "key"
                                ]
                            },
                            "bind": "legend"
                        }
                    ]
                },
                {
                    "data": {
                        "values": [
                            {
                                "label": "895 restaurants offer dinner/484 restaurants offer lunch",
                                "value": "￥30000～"
                            }
                        ]
                    },
                    "transform": [
                        {
                            "calculate": "split(datum.label, '/')",
                            "as": "splitLabel"
                        }
                    ],
                    "mark": {
                        "type": "text",
                        "align": "right",
                        "fontSize": 12,
                        "dx": 10,
                        "dy": -435
                    },
                    "encoding": {
                        "text": {
                            "field": "splitLabel"
                        }
                    }
                }
            ]
        }
    ],
    "resolve": {"scale": {"size": "independent"}}
}