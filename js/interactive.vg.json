{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 450,
    "height": 450,
    "title": "Restaurant price ranges",
    "data": {
        "url": "data/Kyoto_Restaurant_Info.csv"
    },
    "transform": [
        {"fold": ["DinnerPrice", "LunchPrice"]}
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "value",
            "type": "nominal",
            "sort": [" ～￥999", "￥1000～￥1999", "￥2000～￥2999", "￥3000～￥3999", "￥4000～￥4999", "￥5000～￥5999", "￥6000～￥7999", "￥8000～￥9999", "￥10000～￥14999", "￥15000～￥19999", "￥20000～￥29999", "￥30000～"]
        },
        "y": {
            "aggregate": "count",
            "type": "quantitative",
            "title": "Number of Restaurants"
        },
        "color": {"field": "key"},
        "xOffset": {"field": "key"}
    }
}