{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 450,
    "title": "Restaurants in Kyoto",
    "params": [
        {
            "name": "minRating",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 5,
                "step": 0.1,
                "name": "Minimum Rating: "
            }
        },
        {
            "name": "minReviews",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 300,
                "step": 5,
                "name": "Minimum No. of Reviews: "
            }
        }
    ],
    "projection": {
        "type": "azimuthalEqualArea",
        "rotate": [225, 275, 0]
    },
    "layer": [
        {
            "data": {
                "url": "../data/KyotoMap.json",
                "format": {
                    "type": "topojson",
                    "feature": "Kyoto"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "rosybrown",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "../data/KyotoMap.json",
                "format": {
                    "type": "topojson",
                    "feature": "OtherPrefectures"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "../data/KyotoMap.json",
                "format": {
                    "type": "topojson",
                    "feature": "graticules"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "gray"
            }
        },
        {
            "data": {
                "url": "../data/Kyoto_Restaurant_Info.csv"
            },
            "transform": [
                {"filter": "datum.TotalRating > minRating"},
                {"filter": "datum.ReviewNum > minReviews"}
            ],
            "mark": {
                "type": "circle",
                "tooltip": {"content": "data"}
            },
            "encoding": {
                "longitude": {
                    "field": "Long",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Lat",
                    "type": "quantitative"
                },
                "color": {
                    "field": "TotalRating",
                    "title": "Restaurant Rating",
                    "scale": {
                        "type": "bin-ordinal",
                        "range": ["#f0f9e8","#bae4bc","#7bccc4","#43a2ca","#0868ac"],
                        "domain": [0,1,2,3,4,5]
                    }
                },
                "size": {
                    "field": "ReviewNum",
                    "type": "quantitative",
                    "title": "No. of Reviews",
                    "scale": {
                        "domain": [1, 200, 400, 600, 800, 1000, 1200],
                        "range": [30,200]
                    }
                },
                "tooltip": [
                    {"field": "Name", "type": "nominal"},
                    {"field": "JapaneseName", "type": "nominal", "title": "Japanese Name"},
                    {"field": "FirstCategory", "type": "nominal", "title": "First Category"},
                    {"field": "SecondCategory", "type": "nominal", "title": "Second Category"},
                    {"field": "TotalRating", "type": "quantitative", "title": "Restaurant Rating"},
                    {"field": "ReviewNum", "type": "quantitative", "title": "No. of Reviews"}
                ]
            }
        }
    ]
}